# Server configuration
PORT=10000
NODE_ENV=production

# Database configuration - MySQL (AWS RDS)
# These values will be replaced by environment variables on Render
DB_HOST=${DB_HOST}
DB_PORT=3306
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}
DB_DIALECT=mysql

# Sync database in production (NEVER alter tables automatically in production)
SYNC_DB=false

# JWT configuration for authentication (if you add this later)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRE=30d

# Logging
LOG_LEVEL=info 